# Environment Variables Template
# Rename this file to .env and fill in your actual API keys

# Weather API (OpenWeatherMap) - REQUIRED for weather features
VITE_OPENWEATHER_API_KEY=your_openweather_api_key_here

# AI Assistant (Groq API) - OPTIONAL for Auralis AI features  
VITE_GROQ_API_KEY=your_groq_api_key_here

# Music Platforms (OPTIONAL)
VITE_SPOTIFY_CLIENT_ID=your_spotify_client_id_here
VITE_SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here

# Gemini API (OPTIONAL - alternative to Groq)
VITE_GEMINI_API_KEY=your_gemini_api_key_here
