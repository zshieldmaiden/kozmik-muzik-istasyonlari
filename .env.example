# Environment Variables Template
# Rename this file to .env and fill in your actual API keys

# Weather API (OpenWeatherMap) - REQUIRED for weather features
VITE_OPENWEATHER_KEY=your_openweather_api_key_here

# Groq AI API Key (Required) - Get from https://console.groq.com/
VITE_GROQ_API_KEY=your_groq_api_key_here

# Spotify API Configuration (Optional)
VITE_SPOTIFY_CLIENT_ID=your_spotify_client_id_here
VITE_SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here
VITE_SPOTIFY_REDIRECT_URI=http://localhost:5173/callback

# Jamendo API Configuration (Free music)
VITE_JAMENDO_CLIENT_ID=cae78479
